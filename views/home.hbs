<div align="center" style="margin: 2em 0 0 0;">
    <form class="ui large form user-data" align="left" action="/updateinfo" method="post">
        <div class="field">
            <label>Name:</label>
            <input type="text" name="firstName" value="{{user.firstName}}">
        </div>
        <h6 class="ui dividing header"></h6>
        <div class="field">
            <label>Username:</label>
            <input type="text" name="username" value="{{user.username}}">
        </div>
        <h6 class="ui dividing header"></h6>
        <div class="field">
            <label>Email:</label>
            <input type="text" name="email" value="{{user.email}}">
        </div>
        <h6 class="ui dividing header"></h6>
        <div class="field">
            <label>Recieve emails:</label>
            <div class="ui slider checkbox">
                {{#if user.notifications}}
                    <input type="checkbox" name="notifications" checked>
                {{else}}
                    <input type="checkbox" name="notifications">
                {{/if}}
                <label></label>
            </div>
        </div>
        <br>
            <button class="ui button" type="submit">Save Changes</button>
    </form>
</div>
